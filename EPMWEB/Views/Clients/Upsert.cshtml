@model EPM.WEB.Models.ViewModel.ClientsVM
@{
    var title = "Create Client";
}

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Client.ID != 0)
        {
            <input type="hidden" asp-for="Client.ID" />
            title = "Edit Client";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                   EPM  Client 
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Client.ClientName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Client.ClientName" class="form-control" />
                    <span asp-validation-for="Client.ClientName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Client.Location"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Client.Location" class="form-control" />
                    <span asp-validation-for="Client.Location" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Client.NumberOfUsers"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Client.NumberOfUsers" class="form-control" />
                    <span asp-validation-for="Client.NumberOfUsers" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Client.CreatedOn"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Client.CreatedOn" class="form-control" />
                    <span asp-validation-for="Client.CreatedOn" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Client.ID != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
       
    </div>

</form>

